@using totalhr.Resources;
@using totalhr.web.Areas.Admin.Helpers;

@model totalhr.Shared.Models.UserAdminStruct

@{
    ViewBag.Title = AdminGeneric.V_User_Management + " - " + AdminGeneric.V_User_Management_Details;   
 }

@section breadcrumb{
    <a href="/Admin/" title="@AdminGeneric.V_Home">@AdminGeneric.V_Home</a> &gt;
    <a href="/Admin/User/" title="@AdminGeneric.V_User_List">@AdminGeneric.V_User_List</a> &gt;
    <span class="last">@AdminGeneric.V_User_Management_Details</span>
}

   <h1>@(AdminGeneric.V_User_Management + " - (" + AdminGeneric.V_User_Management_Details + ")")</h1>
