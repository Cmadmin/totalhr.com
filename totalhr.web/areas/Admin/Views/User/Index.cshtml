@using totalhr.Resources;
@using totalhr.web.Areas.Admin.Helpers;
@using totalhr.web.Areas.Admin.Models;

@model totalhr.web.Areas.Admin.Models.UserSearchResult

@{
    ViewBag.Title = AdminGeneric.V_Employee_Management;
    
    var breadCrumbItems = new List<BreadCrumbItem>
    {
        new BreadCrumbItem{Url = "", Text = AdminGeneric.V_Employee_Management, Title= AdminGeneric.V_Employee_Management}
    };   
 }

@section pagetitle{
    @AdminGeneric.V_Employee_Management
} 

@section breadcrumb{
    @Html.Raw(GenericHelper.MakeBreadCrumb(breadCrumbItems))
}

  
 <div class="row-fluid">
     <p>
         @AdminGeneric.V_List_Of_Users_Intro
     </p>
 </div>

<form id="frmSortForm" method="post" action="/Admin/User/SortBy/">
    <input type="hidden" id="SortColumn" name="SortColumn" value="@Model.SearchInfo.OrderColumn" />
    <input type="hidden" id="SortDirection" name="SortDirection" value="@Model.SearchInfo.OrderDirection" />
    <input type="hidden" id="hdnPageNumber" name="hdnPageNumber" value="@Model.SearchInfo.PageNumber" />
</form>


<div class="row-fluid">
    @Html.Partial("_UserSearch", Model.SearchInfo)
</div>
<div class="row-fluid">
    <hr />
</div>

<div class="row-fluid"> 
     <div class="span12">    
        @Html.Partial("_UserList", Model)
     </div>
</div>
   
<div class="row-fluid">
    <input type="button" value="@AdminGeneric.V_Add_User" onclick="document.location.href='/Admin/User/Create/'" />
</div>

