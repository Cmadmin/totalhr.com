@using totalhr.Resources;
@using totalhr.web.Areas.Admin.Helpers;

@model IEnumerable<totalhr.data.EF.Profile>

@{
    ViewBag.Title = AdminGeneric.V_Profile_Management;
   
    }

<div id="main">
    <div class="content">

        <h1>@AdminGeneric.V_Profile_Management</h1>

        <div>

        </div>
        <table border="1" class="tabsimple">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Created On</th>
                <th>Created By</th>
                <th>Last Modified</th>
                <th>Last Modified By</th>
                <th>Users</th>
            </tr>
            @foreach(var profile in Model){
            <tr>
                <td>
                   @profile.Name
                </td>
                <td>
                   @profile.Description
                </td>
                <td>
                    @profile.Created               
                </td>
                <td>
                    @profile.CreatedBy
                </td>
                <td>
                    @profile.LastModified
                </td>
                <td>
                    @profile.LastModifiedBy
                </td>
                <td>
                    <input type="button" class="edit" value="View User" onclick="" />
                </td>
            </tr>            
            }
        </table>
    </div>
</div>

