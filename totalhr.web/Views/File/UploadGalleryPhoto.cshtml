@using totalhr.Resources;

@{
    Layout = "~/Views/Shared/_BootstrapPopupLayout.cshtml";
    ViewBag.Title = Account.V_Gallery_Picture_Upload;
}

@section pagetitle
{
    @Account.V_Gallery_Picture_Upload
}

<div class="container-fluid">
           
            <!-- BEGIN PAGE CONTENT-->
            <div class="row-fluid">
               <div class="span12">
                  <div class="widget">
                        <div class="widget-title">
                           <h4><i class="icon-globe"></i>@Account.V_File_Drop_Zone</h4>
                           <span class="tools">
                          
                           </span>                    
                        </div>
                      <div class="widget-body form">
                           <div style="width: 98%;height: 90%;margin:2%;background:beige;">
                              <form action="/File/UploadGalleryPhoto/" class="dropzone clickable" id="my-awesome-dropzone" style="background-color: beige;height:400px;" >
                                 <input type="hidden" name="albumId" id="albumId" value="@ViewBag.AlbumId" />

                                  <div class="default message">
                                      <span>@Account.V_Drop_Files_Or_Click</span>
                                  </div>

                              </form>
                            </div>
                      </div>
                  </div>
               </div>
            </div>
            <!-- END PAGE CONTENT-->         
         </div>
         <!-- END PAGE CONTAINER-->
@section scripts
{
    <script type="text/javascript" src="~/Scripts/Site/assets/dropzone/dropzone.js"></script>
}
