@using totalhr.Resources;
@using totalhr.Shared.Models;

@{
    var currentUser = ViewBag.CurrentUser as Authentication.Models.ClientUser;

    var languagelist = ViewBag.DummyLanguageList as List<ListItemStruct>;
     
}

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">        
        <span class="username">@Common.V_Language</span>
        <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
        @if (languagelist != null)
        {
            foreach (var item in languagelist)
            {
                 <li><a href="/Account/ChangeLanguage/@item.Id"><i class="icon-user"></i> @item.Name</a></li>
            }
        }
    </ul>
</li>