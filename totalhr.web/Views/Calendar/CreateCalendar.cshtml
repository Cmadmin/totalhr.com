@model totalhr.Shared.Models.CalendarInfo

@using totalhr.Resources;
@using H = totalhr.web.Helpers;
@using AH = totalhr.web.Areas.Admin.Helpers;
@using totalhr.web.Areas.Admin.Models;

 @{   
     var breadCrumbItems = new List<BreadCrumbItem>
    {
        new BreadCrumbItem{Url = "/Calendar/", Text = Calendar.V_Company_Calendars, Title= Calendar.V_Company_Calendars},
        new BreadCrumbItem{Url = "", Text = Calendar.V_Create_Calendar, Title= Calendar.V_Create_Calendar}
    };
 }


    @section pagetitle{
        @Calendar.V_Create_Calendar
    }

    @section breadcrumb{
        @Html.Raw(AH.GenericHelper.MakeBreadCrumb(breadCrumbItems))
    }


 <div class="row-fluid">        
        <div class="widget">
            <div class="widget-title">
                <h4><i class="icon-reorder"></i> @Calendar.V_Calendar_Details</h4>
                <span class="tools">
                    <a href="javascript:;" class="icon-chevron-down"></a>                   
                </span>
            </div>
            <div class="widget-body form-horizontal">                   

                @using (Html.BeginForm("CreateCalendar", "Calendar", FormMethod.Post, new { @class = "form-horizontal" }))
                { 
                     @Html.ValidationSummary()

                    <div class="control-group">
                        <label class="control-label">@Calendar.V_Calendar_Name</label>
                        <div class="controls">
                            @Html.TextBoxFor(x => x.Name, new {maxlength="100"})
                        </div>
                    </div>   
            
                    <div class="control-group">
                        <label class="control-label">@Calendar.V_Calendar_Description</label>
                        <div class="controls">
                            @Html.TextAreaFor(x => x.Description, new{maxlength=500})
                        </div>
                    </div> 
            
                    <div class="control-group">
                        <label class="control-label">@Calendar.V_Template_Id</label>
                        <div class="controls">
                                @Html.HiddenFor(x => x.TemplateId)
                        </div>
                    </div>             
                   
                    <div class="control-group">
                        <label class="control-label">@Calendar.V_Open_To_All</label>
                        <div class="controls">
                            @Html.CheckBoxFor(x => x.OpenToAll)
                        </div>
                    </div>             
                  
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-ok icon-white"></i> @Calendar.V_Save
                        </button>
                        <button type="button" class="btn btn-danger" onclick="NavigateTo('/Calendar/');">
                            <i class="icon-remove icon-white"></i> @Calendar.V_Cancel
                        </button>
                    </div>
                          
         
                }
        </div>
   </div>
 </div>